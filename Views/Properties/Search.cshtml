<div id="section1">
    @foreach (var property in Model.Properties)
    {
        <p>PROPERTY.NAME: @property.Name</p>
        <p>PROPERTY.DESCRIPTION: @property.Description</p>

    }
</div>

<p>SEARCH: @Model.Message</p>
<form asp-action="search" asp-controller="properties" method="post">
    <table cellpadding="0" cellspacing="0">
        <tr>


            <td>
                @{
                    <a href="javascript:PagerClick(1);">&lt;&lt;</a>
                    var previousPage = Model.CurrentPageIndex - 1;
                    if (previousPage < 1)
                    {
                        <a href="javascript:PagerClick(1);">Previous</a>
                    }
                    else
                    {
                        <a href="javascript:PagerClick(@previousPage);">Previous</a>
                    }

                    var nextPage = Model.CurrentPageIndex + 1;
                    if (nextPage > Model.PageCount)
                    {
                        <a href="javascript:PagerClick(@Model.PageCount);">Next</a>
                    }
                    else
                    {
                        <a href="javascript:PagerClick(@nextPage);">Next</a>
                    }

                    <a href="javascript:PagerClick(@Model.PageCount);">&gt;&gt;</a>




                }

            </td>
        </tr>
    </table>
    <input type="hidden" id="hfCurrentPageIndex" name="currentPageIndex" />
    <input type="hidden" id="keyword" name="keyword" />

</form>
<script type="text/javascript">
    function PagerClick(index) {
        document.getElementById("hfCurrentPageIndex").value = index;

        document.getElementById("keyword").value = document.getElementById("keywordfield").value;
        document.forms[1].submit();
    }
</script>

<div class="container">
    <!-- keyword entered -->
    <div>keyword: xx</div>

    <!-- sorter -->
    <div>
        <label for="sort">Sort:</label>

        <select name="sort" id="sort">
            <option value="default">Default</option>
            <option value="lowestprice">Lowest price first</option>
            <option value="highestprice">Highest price first</option>
            <option value="featured">Featured</option>

            <option value="newfirst">Newest added properties first</option>

            <option value="oldfirst">Oldest properties first</option>
        </select>
    </div>

    <!-- save search button -->
    <button class="btn btn-primary"><i class="fas fa-star"></i> Save search</button>

</div>

<!--loop ni sa cards, isorround ni og form-->
